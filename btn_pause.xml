<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:height="30dp"
                android:width="30dp"/>
            <corners android:radius="40dp"/>
            <solid android:color="#0fa"/>
            <stroke android:width="0.5dp" android:color="#0c8"/>
        </shape>
    </item>
    <item
        android:gravity="center_horizontal"
        android:start="-8dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size
                android:height="10dp"
                android:width="5dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item
        android:gravity="center_horizontal"
        android:end="-8dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size
                android:height="10dp"
                android:width="5dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>
</layer-list>